<Window x:Class="allinone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:allinone"
        mc:Ignorable="d"
        Title="ДемоЭкз" Height="450" Width="800" WindowStartupLocation="CenterScreen"
         MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Button Content="Добавить пользователя" x:Name="butadclc" Click="Button_Add_Click" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="178"/>
        <Label Content="Пользователи" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <DataGrid Name="use" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" 
                  HorizontalAlignment="Stretch" CanUserAddRows="False" VerticalAlignment="Stretch"
                  Margin="10" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" MinWidth="150" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Роль" MinWidth="150" Binding="{Binding Role.Title}"/>
                <DataGridTemplateColumn Header="Действие" MinWidth="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Изменить" Click="Button_ClickCh" Margin="5,2"/>
                                <Button x:Name="delit" Content="Удалить" Click="Button_ClickDel" Margin="5,2" Background="#FFBEC0FF"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Name="filtal" Grid.Column="1" Grid.RowSpan="2" Margin="0,87,0,0" Grid.Row="1">
            <Label Grid.Column="1" Content="Доп. функции" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
            <Label Content="Сортировка"/>
            <Label Grid.Column="1" Content="Поле" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top"/>
            <ComboBox Name="cmbf" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="73"/>
            <RadioButton Grid.Column="1" Content="А-Я" Name="rbu" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" />
            <RadioButton Grid.Column="1" Content="Я-А" Name="rbd" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Сортировка" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="123" Click="Button_Click"/>
            <Label Grid.Column="1" Content="Фильтрация" HorizontalAlignment="Left"  Grid.Row="2" VerticalAlignment="Top"/>
            <CheckBox Grid.Column="1" Name="chf" Content="Вкл.выкл" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Click="CheckBox_Checked" IsChecked="True"/>
        </StackPanel>


        <Image Margin="10,0,0,0"  Source="/изображения/photo_2025-08-30_13-04-53.jpg" Stretch="Fill" HorizontalAlignment="Left" Width="129" Grid.RowSpan="2" Height="110" VerticalAlignment="Center"/>


        <StackPanel Name="stvis" Grid.Column="1" Grid.Row="3">
            <TextBox Grid.Column="1" x:Name="filtw" TextChanged="filtwch" Grid.Row="3" TextWrapping="Wrap" Width="120" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" x:Name="lblCountOfUsers"
                       Text="" Grid.Row="3" TextWrapping="Wrap"  VerticalAlignment="Top"/>
    </Grid>
</Window>